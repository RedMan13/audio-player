{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/g++",
            "args": [
                "${workspaceFolder}/main.cpp",
                "-I/usr/include/glib-2.0", "-I/usr/lib/x86_64-linux-gnu/glib-2.0/include", "-I/usr/include/gdk-pixbuf-2.0",
                "-lao", "-lsndfile", "-lncurses", "-lX11", "-lXext", "-lfontconfig", "-lXft", "-lnotify", "-lglib-2.0",
                "-Wwrite-strings",
                "-o", "${workspaceFolder}/dist/built",
                "-g"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the app"
        }
    ],
    "version": "2.0.0"
}